Vagrant.configure("2") do |config|

  config.vm.box = "generic/alpine312"

  # Define the master node
  config.vm.define "abdel-ouS" do |master|
    master.vm.hostname = "abdel-ouS"
    master.vm.network "private_network", ip: "192.168.56.10"
    master.vm.network "forwarded_port", guest: 30080, host: 30080
    master.vm.network "forwarded_port", guest: 30443, host: 30443
    master.vm.provider "virtualbox" do |vb|
      vb.memory = "3848"
      vb.cpus = 4
      vb.name = 'abdel-ouS'
    end
    master.vm.synced_folder ".", "/vagrant"
    master.vm.provision "shell", path: "k3d_install.sh"
  end

end
